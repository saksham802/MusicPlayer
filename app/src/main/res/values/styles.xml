<?xml version="1.0" encoding="utf-8"?>

    <resources>
        <!-- Base application theme -->
        <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <!-- Customize your theme here -->
        </style>

        <!-- Custom style for TextInputLayout -->
        <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <!-- Hint text appearance -->
            <item name="hintTextAppearance">@style/CustomHintTextAppearance</item>
        </style>

        <!-- Custom hint text appearance -->
        <style name="CustomHintTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
            <item name="android:textSize">14sp</item>
            <item name="android:textColor">@color/white</item> <!-- Default hint color -->
            <item name="android:textStyle">normal</item>
        </style>

        <!-- Focused custom hint text -->
        <style name="CustomHintTextAppearance_Focused" parent="TextAppearance.MaterialComponents.Caption">
            <item name="android:textColor">@color/black</item>
            <item name="android:textStyle">bold</item>
        </style>
    </resources>
